<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InventoryActivity">

    <ImageButton
        android:id="@+id/homeButton"
        android:layout_width="80dp"
        android:layout_height="71dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_back"
        app:tint="?attr/colorPrimaryVariant"
        tools:ignore="ImageContrastCheck" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/mainThemeButton"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="#9490ADC6"
                android:contentDescription="@string/locked_item"
                android:onClick="changeTheme"
                app:srcCompat="@android:drawable/ic_lock_lock"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <ImageButton
                android:id="@+id/goldThemeButton"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="#8CB68D40"
                android:contentDescription="@string/locked_item"
                android:onClick="changeTheme"
                app:srcCompat="@android:drawable/ic_lock_lock" />

            <ImageButton
                android:id="@+id/greenThemeButton"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="#8C8BE5AD"
                android:contentDescription="@string/locked_item"
                android:onClick="changeTheme"
                app:srcCompat="@android:drawable/ic_lock_lock" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/redThemeButton"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="#8C74112F"
                android:contentDescription="@string/locked_item"
                android:onClick="changeTheme"
                app:srcCompat="@android:drawable/ic_lock_lock" />

            <ImageButton
                android:id="@+id/bambooThemeButton"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="#8C36D6E7"
                android:contentDescription="@string/locked_item"
                android:onClick="changeTheme"
                app:srcCompat="@android:drawable/ic_lock_lock"
                tools:ignore="ImageContrastCheck" />

            <ImageButton
                android:id="@+id/sugarThemeButton"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="#8CE54E7F"
                android:contentDescription="@string/locked_item"
                android:onClick="changeTheme"
                app:srcCompat="@android:drawable/ic_lock_lock"
                tools:ignore="ImageContrastCheck" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/purpleThemeButton"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="#8C7954A1"
                android:contentDescription="@string/locked_item"
                android:onClick="changeTheme"
                app:srcCompat="@android:drawable/ic_lock_lock" />

            <ImageButton
                android:id="@+id/imageButton10"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginHorizontal="10dp"
                android:contentDescription="@string/locked_item"
                app:srcCompat="@android:drawable/ic_lock_lock" />

            <ImageButton
                android:id="@+id/imageButton11"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginHorizontal="10dp"
                android:contentDescription="@string/locked_item"
                app:srcCompat="@android:drawable/ic_lock_lock" />

        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/redeemPrizesButton"
        android:layout_width="216dp"
        android:layout_height="70dp"
        android:layout_marginBottom="96dp"
        android:text="@string/redeem"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>