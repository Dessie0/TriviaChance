<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000"
        motion:autoTransition="animateToEnd"
        motion:staggered="0.65">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/answer4"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="330dp"
            android:layout_height="75dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="80dp"
            motion:layout_constraintHorizontal_bias="0.506"
            motion:layout_constraintStart_toStartOf="parent"
            android:translationY="50dp"
            android:visibility="invisible" />
        <Constraint
            android:id="@+id/answer3"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="330dp"
            android:layout_height="75dp"
            android:layout_marginBottom="28dp"
            motion:layout_constraintBottom_toTopOf="@+id/answer4"
            motion:layout_constraintStart_toStartOf="parent"
            android:translationY="50dp"
            android:visibility="invisible" />
        <Constraint
            android:id="@+id/answer2"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="330dp"
            android:layout_height="75dp"
            android:layout_marginBottom="28dp"
            motion:layout_constraintBottom_toTopOf="@+id/answer3"
            motion:layout_constraintStart_toStartOf="parent"
            android:translationY="50dp"
            android:visibility="invisible" />
        <Constraint
            android:id="@+id/answer1"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="330dp"
            android:layout_height="75dp"
            android:layout_marginBottom="28dp"
            motion:layout_constraintBottom_toTopOf="@+id/answer2"
            motion:layout_constraintStart_toStartOf="parent"
            android:translationY="50dp"
            android:visibility="invisible" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
    </ConstraintSet>
</MotionScene>